{
    "applicationOptions": {
        "applicationType": {
            "name": "applicationType",
            "type": "string",
            "defaultValue": "monolith",
            "prompt": {
                "type": "list",
                "message": "Which *type* of application would you like to create?"
            },
            "values": {
                "monolith": {
                     "value": "monolith",
                     "description": "Monolithic application (recommended for simple projects)"
                },
                "microservice": {
                     "value": "microservice",
                     "description": "Microservice application"
                },
                "gateway": {
                     "value": "gateway",
                     "description": "Microservice gateway"
                },
                "uaa": {
                     "value": "uaa",
                     "description": "JHipster UAA server"
                }
            }
        },
        "reactive": {
            "name": "reactive",
            "type": "boolean",
            "defaultValue": false,
            "prompt": {
                "type": "confirm",
                "message": "[Beta] Do you want to make it reactive with Spring WebFlux?"
            }
        },
        "testFrameworks": {
            "name": "testFrameworks",
            "type": "string",
            "defaultValue": [],
            "prompt": {
                "type": "checkbox",
                "message": "Besides JUnit and Jest, which testing frameworks would you like to use?"
            },
            "values": {
                "gatling": {
                     "value": "gatling",
                     "description": "Gatling"
                },
                "cucumber": {
                     "value": "cucumber",
                     "description": "Cucumber"
                },
                "protractor": {
                     "value": "protractor",
                     "description": "Protractor"
                }
            }
        }
    }
}
